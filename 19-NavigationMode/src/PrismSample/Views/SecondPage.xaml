<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrismSample.Views.SecondPage">
  
  <StackLayout>
    
    <Label Text="{Binding NavigationMode}" HorizontalOptions="CenterAndExpand"></Label>

    <Button Text="Go to third page" Command="{Binding ThirdPageCommand}"></Button>
    
    <Label Text="Yes! You came back to me! I'm visible!" IsVisible="{Binding IsVisible}" HorizontalOptions="CenterAndExpand"></Label>

  </StackLayout>

</ContentPage>